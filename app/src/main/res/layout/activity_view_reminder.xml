<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewReminder">


    <TextView
        android:id="@+id/ReminderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Prescription Reminder"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ReminderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="message goes here"
        app:layout_constraintTop_toBottomOf="@id/ReminderTitle"/>

    <Button
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have taken this medicine."
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ReminderText" />


    <TextView
        android:id="@+id/ReminderCountdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="countdown goes here"
        app:layout_constraintTop_toBottomOf="@id/BackButton"/>

    <TextView
        android:id="@+id/ReminderCountdownLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Dismiss this notification\nor your doctor will be contacted."
        app:layout_constraintTop_toBottomOf="@id/ReminderCountdown"/>


</androidx.constraintlayout.widget.ConstraintLayout>